<h1>Add Story</h1>
<div class="row">
    <form action="/stories" method="post" class="col s12">
        <div class="input-field">
          <input type="text" class="validate" name="title">
          <label for="title">Story Title</label>
        </div>
       <div class="input-field">
    <select name="status">
        <option value="" disabled selected>Choose your option</option>
      <option value="public" selected>Public</option>
      <option value="private">Private</option>
      <option value="unpublished">Unpublished</option>
    </select>
    <label for="status">Status</label>
  </div>
  <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" checked="checked" id="filled-in-box" />
        <label for="filled-in-box">Allow Comments</label>   
      </p>
      
  </div>
  <div class="row">
          <div class="input-field">
            <h6>Tell us your story:</h6>
            <textarea id="textarea2" class="materialize-textarea" data-length="120" name="body"></textarea>
          </div>
        </div>
        <input type="submit" value="Save" class="btn">

    </form>

</div>