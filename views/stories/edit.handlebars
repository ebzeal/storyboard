<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="input-field">
          <input type="text" class="validate" name="title" value="{{story.title}}">
          <label for="title">Story Title</label>
        </div>
       <div class="input-field">
    <select name="status">
        {{!-- <option value="{{story.status}}" selected>{{story.status}}</option> --}}
        {{#select story.status}}
      <option value="public">Public</option>
      <option value="private">Private</option>
      <option value="unpublished">Unpublished</option>
      {{/select}}
    </select>
    <label for="status">Status</label>
  </div>
  <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" {{#if story.allowComments}} checked="checked"{{/if}} id="filled-in-box" />
        <label for="filled-in-box">Allow Comments</label>   
      </p>
      
  </div>
  <div class="row">
          <div class="input-field">
            <h6>Tell us your story:</h6>
            <textarea id="textarea2" class="materialize-textarea" data-length="120" name="body">{{story.body}}</textarea>
          </div>
        </div>
        <input type="submit" value="Save" class="btn">

    </form>

</div>